<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSkinCare"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="20dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cvMakeUp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgSkinCare"
            android:src="@drawable/ic_skincare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/skin_care"
        android:textColor="@color/dark_pink"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/cvSkinCare"
        app:layout_constraintRight_toRightOf="@id/cvSkinCare"
        app:layout_constraintTop_toBottomOf="@id/cvSkinCare" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cvMakeUp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="20dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintLeft_toRightOf="@id/cvSkinCare"
        app:layout_constraintRight_toLeftOf="@id/cvBodyCare"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgMakeUp"
            android:src="@drawable/ic_makeup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/make_up"
        android:textColor="@color/dark_pink"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/cvMakeUp"
        app:layout_constraintRight_toRightOf="@id/cvMakeUp"
        app:layout_constraintTop_toBottomOf="@id/cvMakeUp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cvBodyCare"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="20dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintLeft_toRightOf="@id/cvMakeUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgBodyCare"
            android:layout_width="match_parent"
            android:src="@drawable/ic_bodycare"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/body_care"
        android:textColor="@color/dark_pink"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/cvBodyCare"
        app:layout_constraintRight_toRightOf="@id/cvBodyCare"
        app:layout_constraintTop_toBottomOf="@id/cvBodyCare" />


</androidx.constraintlayout.widget.ConstraintLayout>